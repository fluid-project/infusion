// Top bar and show/hide button
@media all and (max-width: 639px) {
    .fl-prefsEditor-separatedPanel {
        position: fixed;
        bottom: 0px;
        left: 0px;
        width: 100%;

        div.fl-panelBar {
            border-bottom: 0px;
            order: 1;

            span.fl-prefsEditor-buttons {
                margin: 0px 0px 5px 5px;
                float: left;
                border: 2px solid #999696;
                border-radius(3px);
                box-shadow: none;
                background: #fff;

                .fl-prefsEditor-showHide, .fl-prefsEditor-reset {
                    background-color: #fff;
                    color: #2f2b2a;
                }

                .fl-prefsEditor-showHide {
                    min-width: 6em;
                }
            }
        }

        .flc-prefsEditor-iframe {
            order: 2;
            height: 35vh;
            overflow-y: scroll;
        }
    }

    .prefsEditor-demo-theme .fl-prefsEditor-separatedPanel .fl-panelBar span.fl-prefsEditor-buttons {
        background: #fff;
    }
}

.fl-prefsEditor-separatedPanel {
    display: flex;
    flex-flow: column nowrap;

    .fl-panelBar {
        order: 2;
        width: 100%;

        .fl-prefsEditor-buttons {
            box-shadow: 2px 2px 3px 0 #6f6f6f;
            border-bottom: 1px solid #ccc;
            border-left: 1px solid #ccc;
            border-right: 1px solid #ccc; //FLUID-4991: The shadow effect around the hide/show preferences bug fix. (Border right added)
            border-bottom-left-radius:8px;
            border-bottom-right-radius:8px;
            background-color: white;
            min-height: 2em;
            margin-right: 10em;
            display: block;
            float: right;
        }
    }

    .fl-prefsEditor-showHide {
        min-width: 15em;
    }

    .fl-prefsEditor-showHide, .fl-prefsEditor-reset {
        text-transform: lowercase;
        font-weight: bold;
        border: 0;
        background-color: white;
        height: 1.8em;
        color: #2f2b2a;
        font-family: 'OpenSans',"Myriad Pro", Helvetica, Arial, sans-serif;
        font-size: 1.1em;
        margin-right: 0.5em;
        margin-left: 0.5em;
    }

    .fl-prefsEditor-reset {
        border-right: 1px solid #ccc;
    }

    // Font icons for reset/save tabs
    .fl-icon-undo, .fl-icon-preferences {
        font-family: 'InfusionIcons' !important;
        speak: none;
        font-style: normal;
        font-weight: normal;
        font-variant: normal;
        text-transform: none;
        -webkit-font-smoothing: antialiased;
        float: left;
        margin-right: 0.3em;
        margin-top: -0.1em;
        font-size: 1em;
    }

    .fl-icon-undo:before {
        content: "\e008";
    }

    .fl-icon-preferences:before {
        content: "\e00f";
    }
}

.flc-prefsEditor-iframe {
    order: 1;
}

// IFrame
.fl-prefsEditor-separatedPanel-iframe {
    border: 0;
    background-color: #fff;
    height: 0px;
    display: block;
    width: 100%;
}

// Theming
build-themes-separatedPanelPrefsEditor(themes);
