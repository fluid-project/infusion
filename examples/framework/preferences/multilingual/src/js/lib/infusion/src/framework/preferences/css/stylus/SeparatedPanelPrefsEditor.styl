    src:url('../../../lib/fonts/OpenSans-Light.ttf');
    font-weight: 300;
    font-style: normal;
}

@font-face {
    font-family: 'OpenSans';
    src:url('../../../lib/fonts/OpenSans-Regular.ttf');
    font-weight: normal;
